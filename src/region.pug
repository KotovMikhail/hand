block variables
  - var title = "Region";

block short
  .page-short.region-short
    .cropped-image.region-short__cropped-image
      .cropped-image__wrapper.region-short__image-wrapper
        img( src="img/region-short-bg@1x.jpg" srcset="img/region-short-bg@2x.jpg 2x" width="946" height="799" alt="Улбающийся парень" )
      +svg("shape-region-short", 775, 799)
      +svg("shape-region-short-mobile", 375, 487)

    .page-short__content.region-short__content
      h1 К#[em а]ждый год мы п#[em р]овод#[em и]м ф#[em е]стив#[em а]ли в р#[em е]гионах
